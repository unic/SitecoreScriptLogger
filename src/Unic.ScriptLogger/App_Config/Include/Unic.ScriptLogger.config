<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>

    <settings>
      <setting name="ScriptLogger.LogFileDirectory" value="$(dataFolder)/logs" />
      <setting name="ScriptLogger.DefaultLog" value="log" />
    </settings>

    <pipelines>
      <initialize>
        <processor type="Unic.ScriptLogger.Pipelines.Initialize.AddMvcRoute, Unic.ScriptLogger" />
      </initialize>
    </pipelines>

  </sitecore>
</configuration>
